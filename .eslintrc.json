{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["plugin:react/recommended", "standard"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"settings": {
		"react": {
			"version": "16.0"
		}
	},
	"plugins": ["react"],
	"rules": {
		"camelcase": 0,
		"indent": [2, "tab"],
		"no-return-assign": 0,
		"no-tabs": 0,
		"semi": 0,
		"space-before-function-paren": [
			0,
			{ "anonymous": "always", "named": "always" }
		]
	}
}
